{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["app.ts", "**/*.ts"],
  "exclude": ["node_modules"]
}
